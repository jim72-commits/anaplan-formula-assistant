{
  "manifest_version": 3,
  "name": "Anaplan Builder Assistant",
  "version": "1.3",
  "description": "A builder assistant and formula reference tool for Anaplan model builders, provided by Moody's.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://help.anaplan.com/*", "https://*.anaplan.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.anaplan.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
